<p id="notice"><%= notice %></p>

<h1>Audit Events for <%= @election.name %></h1>

<table>
  <thead>
    <tr>
      <th>At</th>
      <th>Action</th>
      <th>Element</th>
      <th>From</th>
      <th>To</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.created_at %></td>
        <td><%= event.auditable_type %></td>
        <td>
          <%= event_action(event) %>
        </td>
        <td>
          <%= show_attributes(event) %>
        </td>
        <td>
          <%= show_attributes(event, 'after_record') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', election_path(@election) %>
